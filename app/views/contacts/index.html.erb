<% content_for :meta_title, "Sandrine Rousset artiste peintre et sculptrice" %>
<% content_for :meta_description, "Contactez Sandrine Rousset pour obtenir plus d'informations sur son travail et ses oeuvres." %>
<% content_for :meta_image, cl_image_path("banner.jpg") %>

<div class="contact-container">
  <h2>Contact</h2>
  <div class="contact-image" style='background-image: url("https://res.cloudinary.com/du5qhnalh/image/upload/v1602918282/contact-1_ife7vi.jpg")'>
  </div>

  <div class="form">
    <p class="texte-contact">Vous souhaitez en savoir plus sur le travail de Sandrine Rousset, ou obtenir des informations supplémentaires sur une oeuvre ?
     Remplissez le formulaire de contact, l'artiste vous répondra dans les meilleurs délais !
   </p>

    <%= simple_form_for @contact do |f| %>

    <%= f.input :first_name, :required => true, :label => "Votre prénom" %>
    <%= f.input :last_name, :required => true, :label => "Votre nom" %>
    <%= f.input :email, :required => true, :label => "Votre email" %>
    <%= f.input :message, :as => :text, :required => true, :label => "Votre message", :input_html => {:rows => 6} %>
    <%= f.submit 'Envoyer', class: "btn-blue form-btn" %>
  <% end %>
  </div>
  <% flash.each do |message_type, message| %>
  <div class="<%= message_type %>">
    <%= message %>
  </div>
<% end %>
</div>
